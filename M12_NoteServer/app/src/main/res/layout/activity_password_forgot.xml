<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground">

    <!-- Include top app bar for auth screens -->
    <include layout="@layout/toolbar_auth" />

    <!-- Scrollable content area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Link (Not interactive yet) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;   Back"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textColor="@color/blue"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Instructions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the email address you used to register. If the account exists, you'll receive a temporary password shortly."
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:layout_marginBottom="24dp" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/forgot_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error text here"
                android:textColor="@color/orange"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- Email Label -->
            <TextView
                android:id="@+id/label_forgot_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/forgot_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_input"
                android:inputType="textEmailAddress"
                android:labelFor="@id/label_forgot_email"
                android:minHeight="48dp"
                android:textColor="@android:color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <!-- Continue Button -->
            <Button
                android:id="@+id/forgot_continue_button"
                style="@style/CustomButton"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Continue"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/blue" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>