<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/document_list_item_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    android:elevation="3dp"
    app:cardCornerRadius="8dp"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?android:selectableItemBackground">

        <!-- Document Title (bound dynamically in adapter to show actual document title) -->
        <TextView
            android:id="@+id/text_document_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document Title"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Document Last Modified Date (bound dynamically in adapter to show actual document modification date) -->
        <TextView
            android:id="@+id/text_document_last_modified_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last modified: 2025-05-06"
            android:textColor="@color/medium_gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>