<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_postauth"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="@color/blue"
    android:paddingStart="12dp"
    android:paddingEnd="0dp"
    android:paddingVertical="8dp"
    android:gravity="center_vertical"
    android:baselineAligned="false">

    <!-- App name (two-line variant if needed for space) -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="GOTT\nNOTES"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:lineSpacingExtra="2dp" />

    <!-- Icon row for post-auth screens -->
    <LinearLayout
        android:id="@+id/icon_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:baselineAligned="false">

        <ImageButton
            android:id="@+id/icon_new_doc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add"
            android:contentDescription="New Document"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/icon_open_folder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_folder"
            android:contentDescription="Open Folder"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/icon_save"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_save"
            android:contentDescription="Save"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/icon_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_share"
            android:contentDescription="Share"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/icon_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/icon_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/icon_logout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_logout"
            android:contentDescription="Logout"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white" />
    </LinearLayout>
</LinearLayout>