<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground">

    <!-- Toolbar for authentication pages -->
    <include layout="@layout/toolbar_auth" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Link -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;   Back"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset password"
                android:textColor="@color/blue"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Instructions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your account email and the temporary password you received."
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:layout_marginBottom="24dp" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/reset_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:visibility="gone"
                android:text="Error text here"
                android:layout_marginBottom="12dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/reset_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/reset_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_input"
                android:inputType="textEmailAddress"
                android:labelFor="@id/reset_email_label"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <!-- Temporary Password -->
            <TextView
                android:id="@+id/temp_password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temporary Password"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/reset_temp_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:autofillHints="password"
                android:background="@drawable/rounded_input"
                android:inputType="textPassword"
                android:labelFor="@id/temp_password_label"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <!-- New Password -->
            <TextView
                android:id="@+id/new_password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/reset_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:autofillHints="newPassword"
                android:background="@drawable/rounded_input"
                android:inputType="textPassword"
                android:labelFor="@id/new_password_label"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <!-- Continue Button -->
            <Button
                android:id="@+id/reset_continue_button"
                style="@style/CustomButton"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="Continue"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>